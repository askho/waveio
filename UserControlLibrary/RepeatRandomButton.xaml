<UserControl x:Class="UserControlLibrary.RepeatRandomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="100">
    <Canvas>
            <Image Name="repeatIcon" Visibility="Hidden" Height="100" Width="100" Source="pack://siteoforigin:,,,/Resources/repeat.png" Stretch="Fill"/>
            <Image Name="repeatOneIcon" Visibility="Hidden" Height="100" Width="100" Source="pack://siteoforigin:,,,/Resources/repeatOne.png" Stretch="Fill"/>
            <Image Name="randomIcon" Visibility="Hidden" Height="100" Width="100" Source="pack://siteoforigin:,,,/Resources/random.png" Stretch="Fill"/>
            <Image Name="noneIcon" Visibility="Visible" Height="100" Width="100" Source="pack://siteoforigin:,,,/Resources/none.png"
               Stretch="Fill"/>
    </Canvas>

</UserControl>
